rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    match /bookings/{bookingId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow create: if false; // bookings created via Cloud Functions only
      allow update: if request.auth != null && request.auth.token.admin == true; // admin cancel/update only
    }

    // fallback
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
